<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FAQ_OFFLINE">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="92dp"
            android:width="200dp"
            android:height="50dp"
            android:text="Для Вас"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="34dp" />


        <EditText
            android:id="@+id/search"
            android:layout_width="400dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="146dp"
            android:layout_marginRight="16dp"
            android:background="#dedede"
            android:ems="100"
            android:hint="Интернет на Камчатке"
            android:inputType="text"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/covid"
            android:background="#dedede"
            android:textColor="#999999"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="192dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="covid-19" />

        <TextView
            android:id="@+id/web"
            android:background="#dedede"
            android:textColor="#999999"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="192dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Интернет" />

        <TextView
            android:id="@+id/howtofind"
            android:background="#dedede"
            android:textColor="#999999"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_marginLeft="196dp"
            android:layout_marginTop="192dp"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Как добраться до Камчатки" />

        <TextView
            android:id="@+id/answerfound"
            android:textColor="#999999"
            android:layout_width="300dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="239dp"

            android:text="Вот что удалось найти повашему запросу:" />

        <TextView
            android:id="@+id/answer"
            android:textColor="#000000"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="289dp"

            android:text="На всех кордонах есть электрогенераторы и солнечные батареи, то есть, возможность заряжать гаджеты у вас будет. Сотовой связи нет нигде. На многих кордонах утром и вечером есть интернет (очень медленный, но весточку родным отправить возможно)." />


        <TextView
            android:id="@+id/headline"
            android:textColor="#000000"
            android:layout_width="500dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="259dp"
            android:textSize="20dp"
            android:textStyle="bold"

            android:text="Интернет-соединение" />

        <Button
            android:id="@+id/register"
            android:layout_width="338dp"
            android:layout_height="54dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="start"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="619dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="58dp"
            android:backgroundTint="#000000"
            android:enabled="true"
            android:text="Больше информации"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>