<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectOne">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/answer"
            android:layout_width="205dp"
            android:layout_height="60dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="156dp"
            android:text="Данные будут автозаполнены из профиля"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/answerfound"
            android:layout_width="207dp"
            android:layout_height="69dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="216dp"
            android:text="Быстрое прохождение регистрации, потребуется ответить только на часть вопроов"
            android:textColor="#999999"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/answer2"
            android:layout_width="136dp"
            android:layout_height="23dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="288dp"
            android:text="Всё под защитой"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/answer3"
            android:layout_width="207dp"
            android:layout_height="93dp"
            android:layout_marginLeft="97dp"
            android:layout_marginTop="320dp"
            android:text="Информация передается, обрабатывается и хранится в соответствии с законодательством РФ"
            android:textColor="#999999"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bitmap__1_"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:layout_marginLeft="80dp"
        android:width="250dp"
        android:height="100dp"
        android:text="Подача анкеты"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="292dp"
        android:backgroundTint="#0078FF"
        android:text="Назад"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:onClick="Back_from_selectOne"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="286dp"
            app:srcCompat="@drawable/bitmap" />

    </RelativeLayout>

    <Button
        android:id="@+id/login"
        android:layout_width="338dp"
        android:layout_height="54dp"
        android:layout_gravity="start"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="64dp"
        android:backgroundTint="@color/black"
        android:enabled="true"
        android:text="Изменить данные в профиле"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/register"
        android:layout_width="338dp"
        android:layout_height="54dp"
        android:layout_gravity="start"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="124dp"
        android:backgroundTint="@color/teal_700"
        android:enabled="true"
        android:text="Подать заявку"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        android:onClick="Podat_Zaiavku"/>

</androidx.constraintlayout.widget.ConstraintLayout>